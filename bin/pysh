import sys
import os
import os.path

# Add current directory to path
sys.path.insert(0, os.getcwd())

import pysh

def main():
	if sys.stdin.isatty():
		completer = pysh.Completer()
		completer.install()
	
	console = pysh.PySH(os.getenv("PATH"))
	if len(sys.argv) == 1: # No file to execute, go interactive
		console.interact()
	else:
		filename = sys.argv[1]
		
		# Remove pysh from the arguments
		sys.argv = sys.argv[1:]
		
		if not os.path.isfile(filename):
			raise ValueError("Could not find file: " + filename)
		elif not os.access(filename, os.R_OK):
			raise ValueError("File is not readable: " + filename)
		
		#Â If everything is good, go execute the files in the right order
		with open(filename) as f:
			console.runscript(f)

if __name__ == '__main__':
	main()
